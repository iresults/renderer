{
    "name": "iresults/renderer",
    "description": "iresults interface to PHP office packages",
    "license": [
        "MIT"
    ],
    "type": "library",
    "authors": [
        {
            "name": "Daniel Corn",
            "email": "cod@iresults.li"
        }
    ],
    "require": {
        "iresults/core": "^3.2"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://git.iresults.li/git/iresults/core.git"
        }
    ],
    "autoload": {
        "psr-0": {
            "Iresults\\Renderer": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Iresults\\Renderer\\Tests\\": "Tests/" }
    },
    "suggest": {
        "phpoffice/phpword": "Allows Word Doc rendering",
        "mpdf/mpdf": "Allows PDF rendering from HTML"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "cundd/test-flight": "^0.2.6"
    }
}
